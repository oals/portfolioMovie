                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:tag="logoImageView2"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/logoImageView"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:srcCompat="@drawable/android" />

            <ImageView
                android:id="@+id/logoImageView3"
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:tag="logoImageView3"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/logoImageView2"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:srcCompat="@drawable/android" />

            <TextView
                android:id="@+id/tagLine"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieInfo" />

            <TextView
                android:id="@+id/creaditBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="67dp"
                android:tag="creaditBy1"
                android:textColor="#9A9A9A"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view5" />

            <TextView
                android:id="@+id/creaditBy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="87dp"
                android:tag="creaditBy2"
                android:textColor="#9A9A9A"
                android:textStyle="italic"
