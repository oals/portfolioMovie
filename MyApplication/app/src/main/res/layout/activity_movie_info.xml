                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:srcCompat="@drawable/baseline_star_24" />

            <ImageView
                android:id="@+id/ratingIcon2"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:tag="ratingIcon2"
                app:layout_constraintStart_toEndOf="@+id/ratingIcon1"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:srcCompat="@drawable/baseline_star_24" />

            <ImageView
                android:id="@+id/ratingIcon3"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:tag="ratingIcon3"
                app:layout_constraintStart_toEndOf="@+id/ratingIcon2"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:srcCompat="@drawable/baseline_star_24" />

            <ImageView
                android:id="@+id/ratingIcon4"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:tag="ratingIcon4"
                app:layout_constraintStart_toEndOf="@+id/ratingIcon3"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:srcCompat="@drawable/baseline_star_24" />

            <ImageView
                android:id="@+id/ratingIcon5"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:tag="ratingIcon5"
                app:layout_constraintStart_toEndOf="@+id/ratingIcon4"
                app:layout_constraintTop_toBottomOf="@+id/view6"
                app:srcCompat="@drawable/baseline_star_24" />

