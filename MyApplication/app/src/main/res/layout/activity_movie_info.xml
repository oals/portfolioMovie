                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="120dp"
                android:background="#BCBCBC"
                android:tag="InfoGenreIdsItem2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/infoGenreIdsItem1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoGenreIdsItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="120dp"
                android:background="#BCBCBC"
                android:tag="InfoGenreIdsItem3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/infoGenreIdsItem2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoGenreIdsItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="120dp"
                android:background="#BCBCBC"
                android:tag="InfoGenreIdsItem4"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/infoGenreIdsItem3"
