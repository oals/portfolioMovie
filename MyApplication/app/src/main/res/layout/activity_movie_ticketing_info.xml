<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#FF0000"
            android:gravity="center"
            android:text="예매 내역"
            android:textColor="#fff"
            android:textSize="17sp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ticketMovieImg"
                    android:layout_width="311dp"
                    android:layout_height="153dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/android" />

                <TextView
                    android:id="@+id/ticketMovieNm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="오펜하이머"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />


                <TextView
                    android:id="@+id/ticketMovieOpenDt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="81dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="2023-04-21"
                    android:textColor="#9A9999"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TextView
                    android:id="@+id/ticketMovieRunTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="57dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="104분"
                    android:textColor="#000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="270dp"
                    android:layout_height="182dp"
                    android:layout_marginStart="-12dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view7">


                    <TableRow
                        android:id="@+id/tableRow_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/ticketSeat1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat1"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat2"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat3"
                            app:buttonIconTint="@android:color/transparent"/>

                        <TextView
                            android:id="@+id/textA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000" />

                        <CheckBox
                            android:id="@+id/ticketSeat4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat4"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat5"
                            app:buttonIconTint="@android:color/transparent"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/ticketSeat6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat6"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat7"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat8"
                            app:buttonIconTint="@android:color/transparent"/>

                        <TextView
                            android:id="@+id/textB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000" />

                        <CheckBox
                            android:id="@+id/ticketSeat9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat9"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat10"
                            app:buttonIconTint="@android:color/transparent"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/ticketSeat11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat11"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat12"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat13"
                            app:buttonIconTint="@android:color/transparent"/>

                        <TextView
                            android:id="@+id/textC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000" />

                        <CheckBox
                            android:id="@+id/ticketSeat14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat14"
                            app:buttonIconTint="@android:color/transparent"/>

                        <CheckBox
                            android:id="@+id/ticketSeat15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat15"
                            app:buttonIconTint="@android:color/transparent"/>
                    </TableRow>
                </TableLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:layout_marginStart="12dp"
                    android:background="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieOpenDt" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="15dp"
                    android:layout_marginStart="12dp"
                    android:background="#000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                <TextView
                    android:id="@+id/hintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="310dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="[선택 좌석]"
                    android:textColor="#B1B1B1"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TextView
                    android:id="@+id/ticketDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="382dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="결제일 : 2023-03-16 16:10"
                    android:textColor="#000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TextView
                    android:id="@+id/ticketMovieDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="355dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="예매 날짜 : 2023-03-16 16:10"
                    android:textColor="#000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TextView
                    android:id="@+id/ticketTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="162dp"
                    android:layout_marginTop="420dp"
                    android:height="30dp"
                    android:alpha="0.87"
                    android:gravity="center"
                    android:text="27000원"
                    android:textColor="#353434"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="136dp"
                    android:layout_marginTop="20dp"
                    android:text="스크린"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view7" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="52dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketMovieImg"
                    app:srcCompat="@drawable/baseline_more_time_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Notice -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center"
            android:padding="16dp"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
