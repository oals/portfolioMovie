<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketingSeatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="315dp"
            android:layout_height="367dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:id="@+id/ticketingTime"
                    android:layout_width="124dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/layout_round"
                    android:backgroundTint="#FFFFFF"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="#979393"
                    android:textOff="12 : 10"
                    android:textOn="12 : 10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <ToggleButton
                    android:id="@+id/ticketingTime4"
                    android:layout_width="124dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="156dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/layout_round"
                    android:backgroundTint="#FFFFFF"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="#979393"
                    android:textOff="18 : 30"
                    android:textOn="18 : 30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketingTime2" />

                <ToggleButton
                    android:id="@+id/ticketingTime3"
                    android:layout_width="124dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/layout_round"
                    android:backgroundTint="#FFFFFF"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="#979393"
                    android:textOff="16 : 20"
                    android:textOn="16 : 20"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketingTime" />

                <ToggleButton
                    android:id="@+id/ticketingTime2"
                    android:layout_width="124dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="156dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_round"
                    android:backgroundTint="#FFFFFF"
                    android:enabled="false"
                    android:text="ToggleButton"
                    android:textColor="#979393"
                    android:textOff="14 : 40"
                    android:textOn="14 : 40"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />


                <TextView
                    android:id="@+id/screenText"
                    android:layout_width="180dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/layout_round"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center"
                    android:text="스크린"
                    android:textColor="#838282"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketingTime3" />

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="270dp"
                    android:layout_height="182dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/screenText">


                    <TableRow
                        android:id="@+id/tableRow_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/seat1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:enabled="false"
                            android:tag="seat1"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat2"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat3"
                            app:buttonIconTint="@android:color/transparent" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textColor="#FFFFFF" />

                        <CheckBox
                            android:id="@+id/seat4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat4"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat5"
                            app:buttonIconTint="@android:color/transparent" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/seat6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat6"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat7"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat8"
                            app:buttonIconTint="@android:color/transparent" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B"
                            android:textColor="#FFFFFF" />

                        <CheckBox
                            android:id="@+id/seat9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat9"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat10"
                            app:buttonIconTint="@android:color/transparent" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/seat11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat11"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat12"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat13"
                            app:buttonIconTint="@android:color/transparent" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:textColor="#FFFFFF" />

                        <CheckBox
                            android:id="@+id/seat14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat14"
                            app:buttonIconTint="@android:color/transparent" />

                        <CheckBox
                            android:id="@+id/seat15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:tag="seat15"
                            app:buttonIconTint="@android:color/transparent" />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/ticketingDate"
                    android:layout_width="265dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/layout_round"
                    android:gravity="center"
                    android:text="날짜 선택"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#7E7D7D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketingDate"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="275dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="#7E7D7D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ticketingTime3"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>